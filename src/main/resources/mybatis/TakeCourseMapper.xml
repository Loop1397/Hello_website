<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerobase.fastlms.admin.course.mapper.TakeCourseMapper">

	<sql id="selectListWhere">
		
	</sql>


	<select id="selectListCount" resultType="long">
  		
  	select count(*) 
	from take_course
	where 1=1
		<include refid="selectListWhere"></include>
	
	</select>

  <select id="selectList" resultType="com.zerobase.fastlms.admin.course.dto.TakeCourseDto">

	select tc.*
    	, c.subject
    	, m.user_name
    	, m.phone
    from take_course tc
    	join course c on tc.course_id = c.id
    	join member m on tc.user_id = m.user_id
    where 1=1
		<include refid="selectListWhere"></include>
    order by reg_dt desc
	limit #{pageStart}, #{pageEnd}
  </select>
  <!-- 
  pageIndex: 1 -> limit 0, 10
  pageIndex: 2 -> limit 10, 10
  pageIndex: 3 -> limit 20, 10
  pageIndex: 4 -> limit 30, 10
   -->
  
</mapper>